generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_SEFA")
}

enum USER_TYPE {
  STUDENT // öğrenci
  COMISSION // Komisyon üyesi
  ADMIN // Yetkili (Admin)
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  email     String @unique
  password  String
  name      String
  last_name String

  user_type USER_TYPE @default(STUDENT)

  tc_number           String?
  student_id          String?
  refreshToken        String[]
  passwordChangeToken String   @default("")
}
